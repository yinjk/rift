{
	"manifest_version": 2,
	"name": "rift",
	"version": "1.0.0",
	"description": "云文件管理",
	"content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-wt9YRWbBm7pGoh/3Y6NjkUCWRSoHNYei0xmnkSat674='; object-src 'self'",
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action": 
	{
		"default_icon": "img/icon.png",
		"default_title": "Rift - 云文件管理"
	},
	"permissions":
	[
		"contextMenus",
		"tabs",
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"options_page": "index.html",
	"homepage_url": "https://github.com/yinjk/rift",
	"omnibox": { "keyword" : "rift" },
	"devtools_page": "devtools.html"
}